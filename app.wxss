/* app.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

/* 按钮样式 */
.primary-btn {
  background: #409EFF;
  color: white;
  border-radius: 8rpx;
}

.danger-btn {
  background: #F56C6C;
  color: white;
  border-radius: 8rpx;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

/* 表单样式 */
.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-label {
  width: 150rpx;
  font-size: 28rpx;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx 0;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx;
  color: #999;
  font-size: 28rpx;
}

.empty {
  text-align: center;
  padding: 100rpx;
  color: #ccc;
  font-size: 28rpx;
}